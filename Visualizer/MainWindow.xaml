<Window x:Class="NothingButNeurons.Visualizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NothingButNeurons.Visualizer"
        mc:Ignorable="d"
        Title="MainWindow" Height="1380" Width="1515">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150*"/>
            <ColumnDefinition Width="1350*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Visualizer controls here" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Border Grid.Column="1" BorderBrush="Gray" BorderThickness="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <ScrollViewer HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden">
                <Canvas x:Name="networkVisualizationCanvas" Width="1340" Height="1340" Background="DarkGray"/>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
